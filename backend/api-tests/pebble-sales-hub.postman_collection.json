{
    "info": {
        "name": "Pebble Sales Hub API",
        "description": "API collection for Pebble Sales Hub - Sales Commission Tracking System",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000/api"
        },
        {
            "key": "token",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login (Admin)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{baseUrl}}/auth/login",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
                        }
                    }
                },
                {
                    "name": "Login (Sales - sarah.j)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{baseUrl}}/auth/login",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"sarah.j\",\n  \"password\": \"password123\"\n}"
                        }
                    }
                },
                {
                    "name": "Get Current User",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/auth/me"
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/auth/logout"
                    }
                }
            ]
        },
        {
            "name": "Users (Admin Only)",
            "item": [
                {
                    "name": "List All Users",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/users"
                    }
                },
                {
                    "name": "Get User by ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/users/:id"
                    }
                },
                {
                    "name": "Create User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/users",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"New Sales Person\",\n  \"username\": \"newsales\",\n  \"password\": \"password123\",\n  \"role\": \"sales\",\n  \"commissionRate\": 12\n}"
                        }
                    }
                },
                {
                    "name": "Update User",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/users/:id",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Updated Name\",\n  \"commissionRate\": 15,\n  \"status\": \"active\"\n}"
                        }
                    }
                },
                {
                    "name": "Delete User",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/users/:id"
                    }
                }
            ]
        },
        {
            "name": "Campaigns",
            "item": [
                {
                    "name": "List Campaigns",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/campaigns"
                    }
                },
                {
                    "name": "Get Campaign by ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/campaigns/:id"
                    }
                },
                {
                    "name": "Create Campaign (Admin)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/campaigns",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"New Campaign\",\n  \"platform\": \"facebook\",\n  \"type\": \"post\",\n  \"url\": \"https://facebook.com/post/123\",\n  \"salesPersonId\": \"<SALES_PERSON_ID>\"\n}"
                        }
                    }
                },
                {
                    "name": "Update Campaign (Admin)",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/campaigns/:id",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Updated Campaign Title\",\n  \"status\": \"paused\"\n}"
                        }
                    }
                },
                {
                    "name": "Delete Campaign (Admin)",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/campaigns/:id"
                    }
                }
            ]
        },
        {
            "name": "Orders",
            "item": [
                {
                    "name": "List Orders",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/orders"
                    }
                },
                {
                    "name": "List Orders (with filters)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/orders?campaignId=<ID>&startDate=2025-01-01&endDate=2025-12-31",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "orders"
                            ],
                            "query": [
                                {
                                    "key": "campaignId",
                                    "value": "<ID>"
                                },
                                {
                                    "key": "startDate",
                                    "value": "2025-01-01"
                                },
                                {
                                    "key": "endDate",
                                    "value": "2025-12-31"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Order by ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/orders/:id"
                    }
                },
                {
                    "name": "Create Order (Snapshot Commission)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/orders",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"campaignId\": \"<CAMPAIGN_ID>\",\n  \"products\": [\n    { \"name\": \"Widget A\", \"qty\": 2, \"basePrice\": 150.00 },\n    { \"name\": \"Widget B\", \"qty\": 1, \"basePrice\": 99.00 }\n  ]\n}"
                        }
                    }
                },
                {
                    "name": "Update Order (Uses Original Snapshot Rate)",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/orders/:id",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"products\": [\n    { \"name\": \"Updated Widget\", \"qty\": 3, \"basePrice\": 200.00 }\n  ]\n}"
                        }
                    }
                },
                {
                    "name": "Delete Order",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/orders/:id"
                    }
                }
            ]
        },
        {
            "name": "Payouts",
            "item": [
                {
                    "name": "Get My Payout (Sales)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/payouts/me?year=2025&month=12",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "payouts",
                                "me"
                            ],
                            "query": [
                                {
                                    "key": "year",
                                    "value": "2025"
                                },
                                {
                                    "key": "month",
                                    "value": "12"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Team Payouts (Admin)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/payouts/team?year=2025&month=12",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "payouts",
                                "team"
                            ],
                            "query": [
                                {
                                    "key": "year",
                                    "value": "2025"
                                },
                                {
                                    "key": "month",
                                    "value": "12"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ]
}